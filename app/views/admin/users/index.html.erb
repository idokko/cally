<div class = "admin-users-index-wrapper">
    <div class = "container">
        <div class = "col-md-offset-2 col-md-8">
            <h1>登録済みのユーザー一覧</h1>
            <table class = "table">
                <tr>
                    <th>id</th>
                    <th>名前</th>
                    <th>登録日</th>
                </tr>
                <tbody>
                    <% @users.each do |user| %>
                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.name %></td>
                            <td><%= user.created_at %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <%= link_to 'トップページ', root_path %>
        </div>
    </div>
</div>