<div class = "room-index-wrapper">
    <div class = container>
        <div class = "row">
            <div class = "col-md-offset-3 col-md-6">
                <h1 class = "text-center">メッセージ一覧</h1>
                <hr>
                    <% @anotherEntries.each do |entry| %>
                        <h3>
                            <strong>
                                <a href = "/rooms/<%= entry.room.id %>">
                                    <%= entry.user.name %>
                                </a>
                            </strong>
                        </h3>
                        <h5 class = "room-message">
                            <% if entry.room.messages.present? %>
                                <%= entry.room.messages.order(created_at: :desc).take.try(:content).truncate(30) %>
                                <span class = "room-time">
                                    <%= I18n.l(entry.room.messages.last.created_at, format: :short) %>
                                </span>
                            <% else %>
                                メッセージがありません
                            <% end %>
                        </h5>
                    <% end %>
            </div>
        </div>
    </div>
</div>