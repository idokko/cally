<!DOCTYPE html>
<html>
  <head>
    <title>Cally</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class = "alart alert-<%= key %>" role = "alert">
        <%= value %>
      </div>
    <% end %>
    
    <%= yield %>
    
    <script>
      $(function(){
        $(".alart").fadeOut(5000);
      })
    </script>
  </body>
</html>
