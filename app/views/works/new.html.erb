<div class = "work-new-wrapper">
    <div class = "container">
        <div class = "row">
            <div class = "col-md-offset-3 col-md-6">
                
                <!--エラー表示-->
                <% if @work.errors.any? %>
                    <div class = "alert alert-danger">
                        <ul>
                            <% @work.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                            <% end %>
                        </ul>    
                    </div>
                <% end %>
                
                <h1 class = "text-center">作品投稿</h1>
                <%= form_for @work do |f| %>
                    <div class = "form-group">
                        <%= f.label '作品' %>
                        <%= f.file_field :image%>
                    </div>
                    <div class = "form-group">
                        <%= f.label 'タイトル', class: 'text-black' %>
                        <%= f.text_field :title, class: 'form-control' %>
                    </div>
                    <div class = "form-group">
                        <%= f.label '作品説明', class: 'text-black' %>
                        <%= f.text_area :description, class: 'form-control' %>
                    </div>
                    <div class = "form-group">
                        <%= f.collection_check_boxes(:type_ids, Type.all, :id, :work_type) do |type| %>
                            <div class = "form-check">
                                <%= type.label class: "form-check-label" do %>
                                    <%= type.check_box class: "form-check-input" %>
                                    <%= type.text %>
                                <% end %>
                            </div>
                        <% end %>
                    </div>
                    
                    <%= f.submit '投稿する', class: 'btn-block btn-black' %>
                    <%= link_to 'トップページ', root_path %>
                <% end %>
            </div>
        </div>
    </div>
</div>