<div class = "card-show-wrapper">
    <div class = "container">
        <div class = "row">
            <div class = "col-md-offset-3 col-md-6">
                <div class = "card-show">
                    <h1 class = "text-center">
                        登録クレジットカード情報
                    </h1>
                    <hr class = "hr-color">
                    <div class = "card-info">
                    <% if @customer_card.blank? %>
                        <h3 class = "card-show-noncard-tag">クレジットカードが登録されていません</h3>
                    <% else %>
                        <div class = "card-image">
                            <%= image_tag "cards/#{@card_src}" %>
                        </div>
                        <div class = "card-info-content">
                            <%= "**** **** **** " + @customer_card.last4 %>
                            <h4>有効期限</h4>
                            <%= @exp_month + " / " + @exp_year %>
                        </div>
                    </div>
                    <%= link_to card_path, method: :delete, class: 'btn btn-danger' do %>
                        削除する
                    <% end %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>