<div class = session-new-wrapper>
    <div class = container>
        <div class = row> 
            <div class = "col-md-offset-4 col-md-4 users-new-container">
                <h1 class = "text-center text-block">ログイン</h1>
                <%= form_for :session, url: login_path, local: true do |f| %>
                    
                    <div class = "form-group">
                        <%= f.label :email, 'メールアドレス', class: 'text-black' %>
                        <%= f.text_field :email, class: 'form-control' %>
                    </div>
                    
                    <div class = "form-group">
                        <%= f.label :password, 'パスワード', class: 'text-black' %>
                        <%= f.password_field :password, class: 'form-control' %>
                    </div>
                    
                    <%= f.submit "ログイン", class: 'btn-block btn-black' %>
                    
                    <%= link_to 'トップページ', root_path %><br>
                    <%= link_to 'パスワードを忘れた方はこちら', password_resets_new_path %>
                <% end %>
            </div>
        </div>
    </div>
</div>